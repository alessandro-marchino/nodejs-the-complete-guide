{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "Launch developer-experience",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeExecutable": "${workspaceFolder}/developer-experience/node_modules/.bin/nodemon",
            "program": "${workspaceFolder}/developer-experience/app.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch main",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}/main",
            "runtimeExecutable": "${workspaceFolder}/main/node_modules/.bin/nodemon",
            "program": "${workspaceFolder}/main/app.js"
        }
    ]
}
